{
  "manifest_version": 3,
  "name": "Remove AI Overview",
  "version": "1.0.0",
  "description": "Remove AI Overviews from Google.",
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.google.com/*"],
      "js": ["src/content.ts"],
      "run_at": "document_start"
    }
  ],
  "background": {
    "service_worker": "src/background.ts"
  },
  "action": {
    "default_popup": "src/popup.html"
  }
}
